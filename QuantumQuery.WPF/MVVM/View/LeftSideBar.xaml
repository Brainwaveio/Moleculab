<UserControl x:Class="QuantumQuery.WPF.MVVM.View.LeftSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuantumQuery.WPF.MVVM.View"
             xmlns:vm="clr-namespace:QuantumQuery.WPF.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1e1e1e">

    <Grid>
        <ListView ItemsSource="{Binding Elements}"
                Width="300"
                Margin="0,0,0,0"
                Background="#252525"
                BorderThickness="0"
                ScrollViewer.CanContentScroll="False"/>
    </Grid>
</UserControl>
